{
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "semi": true,
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": false,
        "jsxBracketSameLine": false,
        "parser": "flow",
        "tabWidth": 2,
        "endOfLine":"auto",
        "arrowParens": "avoid"
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
